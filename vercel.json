{
  "buildCommand": "npm run web:build",
  "outputDirectory": "dist",
  "build": {
    "env": {
      "EXPO_PUBLIC_API_BASE_URL": "/api",
      "NODE_ENV": "production"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://lk-7ly1.onrender.com/api/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "installCommand": "npm install --legacy-peer-deps"
}